{% extends 'base.html.twig' %}

{% block title %}Event Details
{% endblock %}

{% block body %}
	<div class="flex justify-center items-center min-h-screen bg-gray-100">
		<div class="bg-white shadow-md rounded p-8 w-full max-w-2xl">
			<h1 class="text-2xl font-bold mb-4 text-gray-700">Détail de l'evennement</h1>
			<div class="mb-4">
				<table class="w-full text-left border-collapse">
					<tbody>
						<tr>
							<th class="border-b py-2 text-gray-600">Numéro</th>
							<td class="border-b py-2 text-gray-800">{{ event.id }}</td>
						</tr>
						<tr>
							<th class="border-b py-2 text-gray-600">Nom</th>
							<td class="border-b py-2 text-gray-800">{{ event.name }}</td>
						</tr>
						<tr>
							<th class="border-b py-2 text-gray-600">Description</th>
							<td class="border-b py-2 text-gray-800">{{ event.description }}</td>
						</tr>
						<tr>
							<th class="border-b py-2 text-gray-600">Date</th>
							<td class="border-b py-2 text-gray-800">{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="flex justify-between">
				<a href="{{ path('app_event_index') }}" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Retour a la liste</a>
				<a href="{{ path('app_event_edit', {'id': event.id}) }}" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Modifier</a>
			</div>
			<div class="mt-4">
				{{ include('event/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}

