{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center min-h-screen bg-gray-100">
		<div class="bg-white p-8 rounded shadow-md w-full max-w-sm">
			<h1 class="text-2xl font-bold mb-6 text-gray-700">Réinitialisation du mot de passe</h1>

			{% for flash_error in app.flashes('reset_password_error') %}
				<div class="alert alert-danger mb-4">{{ flash_error }}</div>
			{% endfor %}

			{{ form_start(requestForm) }}
			<div class="space-y-4">
				<div>
					{{ form_label(requestForm.email, 'Adresse email', { 'label_attr': { 'class': 'block text-gray-700 font-medium mb-2' } }) }}
					{{ form_widget(requestForm.email, { 'attr': { 'class': 'w-full px-3 py-2 border border-gray-300 rounded' } }) }}
					{{ form_errors(requestForm.email) }}
				</div>
				<div class="text-sm text-gray-600">
					Entrez votre adresse email pour recevoir un lien de réinitialisation de mot de passe.
				</div>
				<button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
					Envoyer le lien
				</button>
			</div>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}

