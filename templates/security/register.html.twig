{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center min-h-screen bg-gray-100">
		<form method="post" class="bg-white p-8 rounded shadow-md w-full max-w-sm">
			{{ form_start(registrationForm) }}
			<h1 class="text-2xl font-bold mb-6 text-gray-700">Inscription</h1>

			<div class="space-y-4">
				<div>
					{{ form_label(registrationForm.firstname, 'Pr√©nom', { 'label_attr': { 'class': 'block text-gray-700 font-medium mb-2' } }) }}
					{{ form_widget(registrationForm.firstname, { 'attr': { 'class': 'w-full px-3 py-2 border border-gray-300 rounded' } }) }}
					{{ form_errors(registrationForm.firstname) }}
				</div>
				<div>
					{{ form_label(registrationForm.lastname, 'Nom', { 'label_attr': { 'class': 'block text-gray-700 font-medium mb-2' } }) }}
					{{ form_widget(registrationForm.lastname, { 'attr': { 'class': 'w-full px-3 py-2 border border-gray-300 rounded' } }) }}
					{{ form_errors(registrationForm.lastname) }}
				</div>
				<div>
					{{ form_label(registrationForm.email, 'Adresse email', { 'label_attr': { 'class': 'block text-gray-700 font-medium mb-2' } }) }}
					{{ form_widget(registrationForm.email, { 'attr': { 'class': 'w-full px-3 py-2 border border-gray-300 rounded' } }) }}
					{{ form_errors(registrationForm.email) }}
				</div>
				<div>
					{{ form_label(registrationForm.password.first, 'Mot de passe', { 'label_attr': { 'class': 'block text-gray-700 font-medium mb-2' } }) }}
					{{ form_widget(registrationForm.password.first, { 'attr': { 'class': 'w-full px-3 py-2 border border-gray-300 rounded' } }) }}
					{{ form_errors(registrationForm.password.first) }}
				</div>
				<div>
					{{ form_label(registrationForm.password.second, 'Confirmer le mot de passe', { 'label_attr': { 'class': 'block text-gray-700 font-medium mb-2' } }) }}
					{{ form_widget(registrationForm.password.second, { 'attr': { 'class': 'w-full px-3 py-2 border border-gray-300 rounded' } }) }}
					{{ form_errors(registrationForm.password.second) }}
				</div>
			</div>

			<button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 mt-6">
				S'inscrire
			</button>
			{{ form_end(registrationForm) }}
		</form>

	</div>
{% endblock %}

