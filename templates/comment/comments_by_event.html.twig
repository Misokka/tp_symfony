{% extends 'base.html.twig' %}

{% block title %}Commentaires de l'événement
{% endblock %}

{% block body %}
	<div class="bg-gray-100 py-10">
		<div class="container mx-auto px-4">
			<h1 class="text-3xl font-bold text-gray-700 mb-6">Commentaires pour l'événement "{{ event.name }}"</h1>
			<p class="text-gray-600 mb-4">
				<strong>Description :</strong>
				{{ event.description }}</p>
			<p class="text-gray-600 mb-4">
				<strong>Lieu :</strong>
				{{ event.location.name }}</p>

			<div class="bg-white shadow-md rounded-lg p-6">
				<h2 class="text-2xl font-bold text-gray-800 mb-4">Liste des commentaires</h2>
				{% for comment in comments %}
					<div class="border-b pb-4 mb-4">
						<p class="text-gray-800">{{ comment.content }}</p>
						<p class="text-sm text-gray-500">
							Par
							{{ comment.autor ? comment.autor.email : 'Anonyme' }}
						</p>
					</div>
				{% else %}
					<p class="text-gray-500">Aucun commentaire pour cet événement.</p>
				{% endfor %}
			</div>

			<a href="{{ path('app_home') }}" class="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
				Retour à la liste des événements
			</a>
		</div>
	</div>
{% endblock %}

