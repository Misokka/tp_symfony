{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<div class="flex justify-center items-center min-h-screen bg-gray-100">
		<div class="bg-white shadow-md rounded p-8 w-full max-w-md">
			<h1 class="text-2xl font-bold mb-6 text-gray-700">Détails de l'utilisateur</h1>
			<table class="table-auto w-full border-collapse border border-gray-300">
				<tbody>
					<tr>
						<th class="border px-4 py-2">Id</th>
						<td class="border px-4 py-2">{{ user.id }}</td>
					</tr>
					<tr>
						<th class="border px-4 py-2">Prénom</th>
						<td class="border px-4 py-2">{{ user.firstName }}</td>
					</tr>
					<tr>
						<th class="border px-4 py-2">Nom</th>
						<td class="border px-4 py-2">{{ user.lastName }}</td>
					</tr>
					<tr>
						<th class="border px-4 py-2">Email</th>
						<td class="border px-4 py-2">{{ user.email }}</td>
					</tr>
					<tr>
						<th class="border px-4 py-2">Rôles</th>
						<td class="border px-4 py-2">{{ user.roles ? user.roles|json_encode : '' }}</td>
					</tr>
				</tbody>
			</table>
			<div class="mt-6">
				<a href="{{ path('app_user_index') }}" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700">Retour à la liste</a>
				<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="bg-yellow-600 text-white px-4 py-2 rounded hover:bg-yellow-700">Modifier</a>
			</div>
		</div>
	</div>
{% endblock %}

