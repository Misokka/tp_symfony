{{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
<div class="space-y-4">
	{% for field in form %}
		{% if 'hidden' not in field.vars.block_prefixes %}
			<div>
				{{ form_label(field, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700 mb-1' } }) }}
				{{ form_widget(field, { 'attr': { 'class': 'mt-1 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 'placeholder': field.vars.label } }) }}
				{% if field.vars.errors|length > 0 %}
					<p class="text-sm text-red-600 mt-1">{{ field.vars.errors|first.message }}</p>
				{% endif %}
			</div>

		{% endif %}
	{% endfor %}
</div>

<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

<div>
	<button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
		{{ button_label|default('Save') }}
	</button>
</div>
{{ form_end(form) }}

